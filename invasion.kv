<Invasion>:
	id:_invasion
	shooter:_shooter		
	fleet:_fleet
	AnchorLayout:
		anchor_x:'center'
		anchor_y:'top'
		FloatLayout:
			id:_enemy_area
			size_hint:1,0.7
			Fleet:
				id:_fleet
				invasion:_invasion
				shooter:_shooter
				cols:8
				spacing:40
				size_hint:0.5,0.4
				pos_hint:{'top':0.9}
				x:root.width/2-root.width/4
	

	AnchorLayout:
		anchor_x:'center'
		anchor_y:'bottom'
		FloatLayout:
			id:_player_area
			size_hint:1,.3
	
			Shooter:
				id:_shooter
				enemy_area:_enemy_area	
				invasion:_invasion					